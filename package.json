{
  "name": "undercover",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run format && npm run lint -- --fix && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "framer-motion": "^10.12.15",
    "idb": "7.1.1",
    "next": "14.2.32",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.23",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8",
    "eslint-config-next": "14.2.32",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^27.0.1",
    "msw": "^2.11.6",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
